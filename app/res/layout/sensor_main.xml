<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过如下选项的变化，更直观的看到设备是否存在作弊嫌疑。模拟器可能没有如下功能，真机作弊，方位陀螺仪等信息可能长期不变化" />

    <Button
        android:id="@+id/test_sensor_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="传感器列表" />

    <Button
        android:id="@+id/test_light_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="光传感器" />

    <Button
        android:id="@+id/test_proximity_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="近距离传感器" />

    <Button
        android:id="@+id/test_gyroscope_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="陀螺仪" />

    <Button
        android:id="@+id/test_accelerometer_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="加速测量仪" />

    <Button
        android:id="@+id/test_accelerometer_2_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="重力测量" />

    <Button
        android:id="@+id/test_magnetic_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="磁场传感器" />

    <Button
        android:id="@+id/test_orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="方位测量" />

</LinearLayout>